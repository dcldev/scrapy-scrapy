{{#each articles}}
<div class="container-fluid">
        <div class="jumbotron text-center background-image">
            <div class="overlay">
                <div class="caption">
                    <h1 class="display-1 text-white">MINT SCRAPER</h1>
                    <h2 class="text-white">THE ONLY CONDITION IS MINT</h2>
                </div>
            </div>
        </div>
    <div class=row>
        <div class="col-12">
                <div class="card w-90">
                    <div class="card-header text-white" style="background-color : #DA7015">
                        <a href={{link}} target="_blank" class="text-white">
                            <h2>{{title}}</h2>
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            {{summary}}
                        </p>
                        <button data="{{_id}}" class="btn btn-info note-btn">Article Notes</button>
                        <button data="{{_id}}" class="btn btn-danger delete-btn">Delete From Saved</button>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h7 class="modal-title">Notes for Article: </h7>
                <p> {{title}} </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br/>
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="save-note">Save Note</button>
            </div>
        </div>
    </div>
</div>
{{/each}}